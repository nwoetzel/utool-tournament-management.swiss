<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >


    <TextView
        android:id="@+id/order_by_rank_overall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:gravity="center"
        android:text="Rank  "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/order_by_s_overall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/overall_standings_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="  S   "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/order_by_name_overall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/overall_standings_list"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/order_by_w_overall"
        android:layout_toRightOf="@+id/order_by_rank_overall"
        android:gravity="center_vertical"
        android:text=" Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/overall_standings_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/order_by_rank_overall" >
    </ListView>


    <TextView
        android:id="@+id/order_by_l_overall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/overall_standings_list"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/order_by_t_overall"
        android:gravity="center"
        android:text="  L  "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/order_by_w_overall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/overall_standings_list"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/order_by_l_overall"
        android:gravity="center"
        android:text="  W  "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/order_by_t_overall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/overall_standings_list"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/order_by_s_overall"
        android:gravity="center"
        android:text="  T  "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

</RelativeLayout>