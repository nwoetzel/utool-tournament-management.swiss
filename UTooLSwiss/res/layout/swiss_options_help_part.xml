<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scr"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView41"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/TextView03"
            android:text="All selected tie breakers will be used in descending order."
            android:textColor="#FF99FF" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="7dp"
            android:text="Cumulative: The sum of the players&apos; running scores."
            android:textColor="#FF99FF" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView51"
            android:layout_below="@+id/textView51"
            android:layout_marginTop="7dp"
            android:text="Opponent Score: The player whose opponents have the highest summed score."
            android:textColor="#FF99FF" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView52"
            android:layout_below="@+id/textView52"
            android:layout_marginTop="7dp"
            android:text="Matches Played:  If the players have versed each other, the winner will win the tie."
            android:textColor="#FF99FF" />
        
         <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView52"
            android:layout_below="@+id/textView53"
            android:layout_marginTop="7dp"
            android:text="Lazy: Winner is randomly selected."
            android:textColor="#FF99FF" />
        

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/TextView02"
            android:layout_alignTop="@+id/textView5"
            android:gravity="center"
            android:text="Ties"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#00FFFF" />

        <Button
            android:id="@+id/help_close_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView55"
            android:text="Close" />

    </RelativeLayout>

</ScrollView>